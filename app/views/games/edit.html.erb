<h2> GAMES#EDIT </h2>

<%= simple_form_for @game do |f| %>
  <%= "Match Details" %>
  <%= f.input :sport, collection: ["basketball", "football", "hockey"] %>
  <%= f.input :date_time %>
  <div style='width: 800px;'>
    <div id="geolocation" style='width: 500px; height: 400px;'></div>
  </div>
  <%= f.input :name %>
  <%= f.hidden_field :lat_lng, id: 'lat_lng' %>
  <%= f.input :admin_id, collection: @game.players %>

  <%= f.button :submit %>

<% end %>

</br>
<%= link_to 'Back', url_for(controller: :players, action: :manage_games, id: @game.admin_id), class: 'button' %>











<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<script type="text/javascript">

  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'geolocation'} }, function(){
    if(navigator.geolocation)
      navigator.geolocation.getCurrentPosition(displayOnMap);

    var mlat = <%=raw @game.location.lat %>;
    var mlng = <%=raw @game.location.lng %>;
    var marker = handler.addMarker({
      lat: mlat,
      lng: mlng
    });
    google.maps.event.addListener(handler.getMap(), 'click', function(event) {
      var lat = event.latLng.lat();
      var lng = event.latLng.lng();

      if(confirm("This is a good location?"))
      {
        // If the user already placed a pin, remove it before adding a new one
        if(marker)
        {
          handler.removeMarker(marker);
        }

        marker = handler.addMarker({
          lat: lat,
          lng: lng
        });

        setGameLocation(lat + "," + lng);
      }
    });
  });

  function displayOnMap(position){
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude
    });
    handler.map.centerOn(marker);
    handler.getMap().setZoom(14);
  };

  function setGameLocation(lat_lng){
    $(document).ready(function(){
      $("#lat_lng").val(lat_lng);
    });
  };
      
</script>