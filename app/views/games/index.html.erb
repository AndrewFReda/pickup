<h2> GAMES#INDEX </h2>

<table id="games_table">
  <tr>
    <th> Date </th>
    <th> Time </th>
    <th> Location </th>
    <th> Spots Remaining </th>
    <th>  </th>
  </tr>
  <% @games.each do |game| %>
  <tr>
    <td> <%= "#{game.date_time.day}/#{game.date_time.month}" %> </td>
    <td> <%= "#{game.date_time.hour}:#{game.date_time.min}" %> </td>
    <td> <%= "#{game.location.name}" %> </td>
    <td> <%= "#{game.game_size - game.players.count}" %> </td>
    <td>
      <% if !game.has_player(current_user.player) %>
        <%= button_to 'Join Game', url_for(controller: :players, action: :join_game, id: current_user.player.id, game_id: game.id) %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
</br>
<%= link_to 'Back', root_url, class: 'button' %>